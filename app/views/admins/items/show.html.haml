.row
  .col-md-8.offset-md-2
    .card.mb-3
      .card-header.d-flex.justify-content-between
        %h2 商品詳細
        = button_to '削除', admins_item_path(@item), method: :delete, data: { turbo_confirm: '削除してもよろしいですか' }, class: 'btn btn-danger'
      .card-body
        %h5.card-title= @item.name
        = image_tag product_photo_image(@item), class: 'img-fluid'
        %p.card-text.border-bottom.pb-2.mb-4
          %strong= Item.human_attribute_name(:price)
          = number_to_currency(@item.price)
        %p.card-text.border-bottom.pb-2.mb-4
          %strong= Item.human_attribute_name(:description)
          = @item.description
      .card-footer.d-flex.gap-2
        = link_to '編集', edit_admins_item_path(@item), class: 'btn btn-primary'
        = link_to '戻る', admins_items_path, class: 'btn btn-secondary'
