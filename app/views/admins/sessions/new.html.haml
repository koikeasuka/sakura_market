%h2 管理者ログイン
= simple_form_for(resource, as: resource_name, url: session_path(resource_name)) do |f|
  .form-inputs
    = f.input :email,
      required: false,
      autofocus: true,
      label: false,
      placeholder: Admin.human_attribute_name(:email)
    = f.input :password,
      required: false,
      label: false,
      placeholder: Admin.human_attribute_name(:password)
    = f.input :remember_me, as: :boolean if devise_mapping.rememberable?
  .form-actions
    = f.button :submit, 'ログイン'
